<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical" >

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/act_confirm_order_ptrsv_all"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        ptr:ptrHeaderSubTextColor="@android:color/black"
        ptr:ptrHeaderTextColor="@android:color/black" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <FrameLayout
                android:id="@+id/act_confirm_order_fl_goods"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_confirm_order_fl_params"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_confirm_order_fl_payments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_my_red_pay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_confirm_order_fl_account_payments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_confirm_order_fl_fees"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <!-- <TextView
                android:id="@+id/tv_panduan"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:background="@drawable/layer_gray_stroke_all"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/text_dingdan"
                android:textColor="@color/main_color"
                android:textSize="10sp"
                android:visibility="gone" /> -->

            <Button
                android:id="@+id/act_confirm_order_btn_confirm_order"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_margin="10dp"
                android:background="@drawable/selector_main_color_corner"
                android:text="确认订单"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>