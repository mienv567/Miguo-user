<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/v_ll"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_activity_gray" />

        <View
            android:id="@+id/v_l2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/v_ll"
            android:background="@color/text_line" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:alpha="75"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_event_time" />

            <TextView
                android:id="@+id/tv_timer_instance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/act_event_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_time"
            android:layout_below="@id/v_l2"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:listSelector="#00000000"
            android:scrollbars="none"
            ptr:ptrHeaderSubTextColor="@color/gray"
            ptr:ptrHeaderTextColor="@color/gray" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
    </RelativeLayout>
