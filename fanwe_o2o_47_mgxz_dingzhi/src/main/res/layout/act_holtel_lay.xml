<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/stroke" />

    <FrameLayout
        android:id="@+id/gps_searchcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/select_time_holtel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/search_nearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <Button
        android:id="@+id/act_confirm_order_btn_search"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_margin="10dp"
        android:background="@drawable/selector_main_color_corner"
        android:text="查找"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</LinearLayout>