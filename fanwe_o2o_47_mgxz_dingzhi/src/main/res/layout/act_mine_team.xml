<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical">

    <include layout="@layout/item_layout_sample_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_activity_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="战队成员（"
            android:textColor="@color/text_fenxiao"
            android:textSize="@dimen/text_size_item_price_current" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_46b899"
            android:textSize="@dimen/text_size_item_price_current" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="）"
            android:textColor="@color/text_fenxiao"
            android:textSize="@dimen/text_size_item_price_current" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的东家："
            android:textColor="@color/text_46b899"
            android:textSize="@dimen/text_size_base" />

        <TextView
            android:id="@+id/tv_stationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="11"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/text_fenxiao"
            android:textSize="@dimen/text_size_base" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/stroke" />

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/layer_gray_stroke_bot_deep"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_textOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_distribution_tabs"
            android:enabled="false"
            android:gravity="center"
            android:text="我的大掌柜"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/tv_textTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_distribution_tabs"
            android:gravity="center"
            android:text="我的店小二"
            android:textColor="@color/text_fenxiao"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke" />

    <FrameLayout
        android:id="@+id/act_my_xiaomi_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_tab"></FrameLayout>
</LinearLayout>