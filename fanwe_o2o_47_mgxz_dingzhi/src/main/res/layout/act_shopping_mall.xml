<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.fanwe.library.customview.SDLvCategoryView
                android:id="@+id/lcv_left"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/stroke" />

            <com.fanwe.library.customview.SDLvCategoryView
                android:id="@+id/lcv_middle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/stroke" />

            <com.fanwe.library.customview.SDLvCategoryView
                android:id="@+id/lcv_right1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/stroke" />

            <com.fanwe.library.customview.SDLvCategoryView
                android:id="@+id/lcv_right2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/stroke_deep" />
        
        <com.handmark.pulltorefresh.library.PullToRefreshGridView
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ptrlv_grid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:weightSum="2"
                ptr:ptrHeaderSubTextColor="@color/gray"
                ptr:ptrHeaderTextColor="@color/gray" >
           <!--  <GridView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shopping_grid"
                
                ></GridView> -->	
        </com.handmark.pulltorefresh.library.PullToRefreshGridView>
</LinearLayout>