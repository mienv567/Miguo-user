<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@color/gray_cc"
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp" />


    <TextView
        android:id="@+id/type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignLeft="@+id/image"
        android:layout_alignTop="@+id/image"
        android:background="@drawable/shape_cricle_bg_yellow"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:text="正在直播"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    
    <ImageView
        android:id="@+id/ic_location"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:background="@drawable/ic_localtion_shop"
        android:layout_width="10dp"
        android:layout_height="10dp" />
    
    <TextView
        android:id="@+id/location"
        android:layout_marginTop="2dp"
        android:layout_alignRight="@+id/image"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/ic_location"
        android:layout_alignBottom="@+id/ic_location"
        android:singleLine="true"
        android:text="星巴克（黄龙广场店）啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊 "
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />

</RelativeLayout>