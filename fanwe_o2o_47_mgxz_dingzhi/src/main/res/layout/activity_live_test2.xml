<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miguo.live.views.LiveTestActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登录App"
        android:id="@+id/bt_login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="获取腾讯Usersig"
        android:id="@+id/bt_get_sig"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登录腾讯Tls"
        android:id="@+id/bt_login_tls"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="获取roomId"
        android:id="@+id/bt_zhibo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="进入房间"
        android:id="@+id/bt_enter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <com.miguo.live.views.customviews.HostBottomToolView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  <com.miguo.live.views.customviews.HostMeiToolView
      android:layout_width="36dp"
      android:layout_height="@dimen/dp200"/>
</LinearLayout>
