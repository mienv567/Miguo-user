<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg_item_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_bg" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_orange"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="11dp" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_tags_item_live_list_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/tv_shop_item_live_list_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_tags_item_live_list_home_fragment"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_location_live_item"
            android:drawablePadding="3dp"
            android:text="杭州"
            android:textColor="@color/white"
            android:textSize="14dp" />



    </RelativeLayout>
</RelativeLayout>
