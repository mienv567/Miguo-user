<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_repacket_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context="com.miguo.ui.RedPacketResultActivity">
    <FrameLayout
        android:id="@+id/location_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/redPacket_bg"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp44"
            android:layout_marginRight="@dimen/dp44"
            android:lines="1"
            android:ellipsize="end"
            android:text="分享成功"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <View
        android:id="@+id/location_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp4"
        android:background="@color/redPacket_bg"
        android:layout_below="@+id/location_1"/>
    <View
        android:id="@+id/redPacket_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp36"
        android:layout_below="@+id/location_2"/>
    
    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/location_1"
        android:layout_marginTop="@dimen/dp12"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="老板娘的翻倍红包"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@+id/iv_face"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp6"
        android:text="恭喜发财，万事如意"
        android:textColor="@color/text_base_color"
        android:textSize="15sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/location_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="63dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tv_desc"
        >
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0.06"
            android:textSize="45sp"
            android:textColor="@color/redPacket_bg"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dp14"
            android:text=" 元  × "
            android:textSize="15sp"
            android:textColor="@color/redPacket_bg"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2"
            android:textSize="45sp"
            android:textColor="@color/redPacket_bg"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/location_3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="已存入"
            android:textColor="#999999"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/link_txt"
            android:autoLink="all"
            android:textColor="#999999"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="，可提现，可消费"
            android:textColor="#999999"
            android:textSize="13sp"/>
    </LinearLayout>


</RelativeLayout>
