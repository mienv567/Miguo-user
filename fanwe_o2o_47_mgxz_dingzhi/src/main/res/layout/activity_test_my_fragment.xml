<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.miguo.live.views.TestMyFragmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp87"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        android:gravity="center_vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_face"
            android:layout_width="@dimen/dp57"
            android:layout_height="@dimen/dp57"
            android:src="@drawable/app_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_user_face"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已而已而哟"
                android:textSize="@dimen/sp17"
                android:textColor="@color/black"
                android:drawableRight="@drawable/ic_rank_1"
                android:drawablePadding="@dimen/dp5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp7"
                android:text="我是哈哈就是大连开发..."
                android:textSize="@dimen/sp17"
                android:textColor="@color/gray_text_99"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp9"
            android:layout_height="@dimen/dp13"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_right_pretty"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_cc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp9"
                    android:gravity="center"
                    android:text="88888"
                    android:textColor="@color/gray_text_99"
                    android:textSize="@dimen/sp15"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="center"
                    android:text="88888"
                    android:textColor="@color/gray_text_99"
                    android:textSize="@dimen/sp13"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/bg_activity_gray"/>

</LinearLayout>
