<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="173.5dp"
    android:layout_height="117dp"
   	android:orientation="vertical"
   	android:layout_gravity="center"
   	android:gravity="center_vertical"
    android:background="@drawable/bg_dialog_bc"
    >
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="提示"
	    android:textSize="@dimen/text_size_item_price_current"
	    android:textColor="@color/text_fenxiao"
	    android:gravity="center"
	    android:textStyle="bold"
	    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_content"
        android:layout_marginTop="13.5dp"
        android:paddingLeft="21.5dp"
        android:paddingRight="21.5dp"
        android:textSize="@dimen/text_size_button"
        android:textColor="@color/text_new_home"
         />
	<Button 
	    android:layout_width="100dp"
	    android:layout_height="38dp"
	    android:background="@drawable/selector_main_color_corner"
	    android:text="确定"
	    android:id="@+id/bt_confirm"
	    android:layout_marginTop="10.5dp"
	    android:textColor="@color/white"
	    android:textSize="20sp"
	    android:layout_gravity="center"
	    />
</LinearLayout>