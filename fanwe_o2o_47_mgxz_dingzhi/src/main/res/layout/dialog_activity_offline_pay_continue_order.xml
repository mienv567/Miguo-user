<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/c_99000000"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/content_layout"
        android:background="@drawable/shape_bg_white_10"
        android:layout_centerHorizontal="true"
        android:layout_width="273dp"
        android:layout_height="173dp">

        <ImageView
            android:id="@+id/cancel"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/offline_login_cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="16dp"
            android:layout_height="16dp" />


        <TextView
            android:id="@+id/text1"
            android:textSize="16sp"
            android:text="优惠时段已过"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textColor="@color/c_595959"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text2"
            android:layout_below="@+id/text1"
            android:textSize="16sp"
            android:text="继续使用原价支付"
            android:layout_centerHorizontal="true"
            android:textColor="@color/c_595959"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_below="@+id/text2"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cancel_order"
                android:text="返回改价"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@drawable/shape_bg_yellow_8dp"
                android:textColor="@color/white"
                android:layout_width="90dp"
                android:layout_height="32dp" />
            
            <android.support.v4.widget.Space
                android:layout_width="43dp"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/continue_order"
                android:text="继续支付"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@drawable/shape_bg_yellow_8dp"
                android:textColor="@color/white"
                android:layout_width="90dp"
                android:layout_height="32dp" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>