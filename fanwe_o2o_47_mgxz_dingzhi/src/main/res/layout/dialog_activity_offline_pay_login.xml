<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/c_99000000"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/content_layout"
        android:background="@drawable/shape_bg_white_10"
        android:layout_centerHorizontal="true"
        android:layout_width="273dp"
        android:layout_height="173dp">

        <ImageView
            android:id="@+id/cancel"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/offline_login_cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="16dp"
            android:layout_height="16dp" />


        <TextView
            android:id="@+id/verification_phone"
            android:textSize="17sp"
            android:text="手机验证"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textColor="@color/c_2e2e2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/phone_number_layout"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/verification_phone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/phone"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_bg_gray_f2_8"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="13sp"
                android:hint="请输入您的手机号"
                android:maxLength="11"
                android:textColor="@color/c_595959"
                android:textColorHint="@color/c_CCCCCC"
                android:inputType="phone"
                android:layout_width="150dp"
                android:layout_height="32dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/get_sms_code"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:background="@drawable/shape_bg_yellow_8dp"
                android:layout_width="90dp"
                android:layout_height="32dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/phone_number_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sms_code"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_bg_gray_f2_8"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="13sp"
                android:hint="请输入您的验证码"
                android:textColor="@color/c_595959"
                android:textColorHint="@color/c_CCCCCC"
                android:inputType="phone"
                android:layout_width="150dp"
                android:layout_height="32dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/sure"
                android:text="确定"
                android:textColor="@color/c_999999"
                android:textSize="11sp"
                android:background="@drawable/shape_bg_gray_f2_8"
                android:layout_width="90dp"
                android:layout_height="32dp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>