<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="@dimen/dp187"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp140"
        android:background="@drawable/shape_cricle_solid_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close_dialog_get_diamond_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/dp15"
            android:src="@drawable/back_live_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_diamond" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="登录帐号 领取钻石"
                android:textColor="@color/text_home_recommend"
                android:textSize="@dimen/dp19" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_dialog_get_diamond_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:layout_marginLeft="@dimen/dp27"
            android:layout_marginRight="@dimen/dp27"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/bg_orange"
            android:gravity="center"
            android:text="登 录"
            android:textColor="@color/white"
            android:textSize="@dimen/dp17" />
    </LinearLayout>
</FrameLayout>

