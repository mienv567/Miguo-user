<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/dp113"
    android:background="@drawable/bg_unrob_v2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手太慢没抢到"
        android:textColor="#d72520"
        android:textSize="@dimen/sp15"
        android:layout_marginTop="@dimen/dp80"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp20"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:text="很遗憾"
        android:layout_marginTop="@dimen/dp37"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您与中奖就差一次点击,\n     一会儿还有机会哦~"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp11"
        android:layout_marginTop="@dimen/dp19"
        />
    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rob_enter_v2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp22"
        android:text="确定"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#e91c2d"
        android:textSize="@dimen/sp16"/>

</LinearLayout>