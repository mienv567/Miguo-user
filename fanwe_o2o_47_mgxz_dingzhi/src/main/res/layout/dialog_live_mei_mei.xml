<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp280"
        android:layout_height="@dimen/dp200"
        android:layout_gravity="center"
        android:background="@drawable/shape_cricle_solid_white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="美 颜"
            android:textColor="@color/dark_text"
            android:layout_marginTop="@dimen/dp36"
            android:textSize="@dimen/sp16"/>
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0%"
            android:textSize="@dimen/sp16"
            android:layout_marginTop="@dimen/dp12"
            android:textColor="@color/dark_text"
            />

        <SeekBar
            android:id="@+id/seekbar"
            style="@style/MySeekBar"
            android:layout_marginBottom="@dimen/dp24"
            android:layout_marginTop="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sure_action"
            android:layout_width="@dimen/dp104"
            android:layout_height="@dimen/dp33"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_cricle_orange_solid_radius_big"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            />

    </LinearLayout>

</FrameLayout>