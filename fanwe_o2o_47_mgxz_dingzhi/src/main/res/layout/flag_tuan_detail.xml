<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical" >

    <com.fanwe.customview.SDStickyScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/act_tuan_detail_ssv_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false"
        android:scrollbars="none"
        ptr:ptrHeaderSubTextColor="@color/gray"
        ptr:ptrHeaderTextColor="@color/gray" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_image_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_rating"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_youhui"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_other_merchant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_attr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_more_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_combined_packages"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_buy_notice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/act_tuan_detail_fl_comment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false" >
            </FrameLayout>
        </LinearLayout>
    </com.fanwe.customview.SDStickyScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_delect"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/selector_main_color_corner"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/selector_main_color_corner"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>