<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title_bar" >

    <TextView
        android:id="@+id/frag_home_title_bar_tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="46dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="市场"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/frag_home_title_bar_ll_earn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_title_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/frag_home_title_bar_tv_earn"
            style="@style/text_base"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="沈阳"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/frag_home_title_bar_iv_earn_arrow"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_down_white" />
    </LinearLayout>


</RelativeLayout>