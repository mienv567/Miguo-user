<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <View 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="1px"
            android:background="@color/stroke"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bg_cart_like"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车猜你喜欢"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:textColor="@color/text_fenxiao"
            />
        <View 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:background="@color/stroke"
            />
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你可能想看"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_fenxiao"
        />
        <com.fanwe.library.customview.SDGridLinearLayout
            android:id="@+id/frag_shopcart_recommend_ll_content"
            android:layout_width="fill_parent"
            android:background="@color/bg_activity_gray"
            
            android:layout_height="wrap_content" >
        </com.fanwe.library.customview.SDGridLinearLayout>
</LinearLayout>