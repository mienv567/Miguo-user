<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_comment_detail"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_white_gray_stroke_top_bot_deep"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RatingBar
            android:id="@+id/rb_star"
            style="@style/ratingbar_store_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/tv_star_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/rb_star"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/main_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow_right"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="评分人数加载中..."
            android:textColor="@color/text_item_content"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="15dip"
            android:layout_height="21dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

</LinearLayout>