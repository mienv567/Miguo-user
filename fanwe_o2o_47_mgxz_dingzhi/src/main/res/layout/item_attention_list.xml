<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_icon_item_attention"
        android:layout_width="@dimen/dp57"
        android:layout_height="@dimen/dp57"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp15"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_live_start" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/iv_icon_item_attention"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_item_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_home_recommend"
            android:textSize="@dimen/dp17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textColor="@color/text_hongbao_title"
            android:textSize="@dimen/dp13" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp12"
        android:text="已关注"
        android:textColor="@color/text_home_recommend"
        android:textSize="@dimen/dp16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/iv_icon_item_attention"
        android:layout_marginTop="@dimen/dp15"
        android:background="#eeeeee" />
</RelativeLayout>
