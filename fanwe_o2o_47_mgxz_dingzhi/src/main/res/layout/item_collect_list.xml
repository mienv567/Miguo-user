<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon_item_collect"
            android:layout_width="@dimen/dp57"
            android:layout_height="@dimen/dp57"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginTop="@dimen/dp15"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/iv_icon_item_collect"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_item_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_fenxiao"
                android:textSize="@dimen/dp15" />

            <TextView
                android:id="@+id/tv_num_item_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_CCCCCC"
                android:textSize="@dimen/dp14" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp12"
            android:src="@drawable/arrow_right" />

        <View
            android:id="@+id/view_item_collect"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/iv_icon_item_collect"
            android:layout_marginTop="@dimen/dp15"
            android:background="#eeeeee" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_item_collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp93"
        android:layout_below="@+id/iv_icon_item_collect"
        android:scrollbars="none" />
</LinearLayout>