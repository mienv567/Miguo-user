<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout        
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:background="@color/text_home_recommend"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp17"
            android:gravity="left|center_vertical"
            android:text="1月"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/data_line"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp17"
            android:text="1121"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_home_recommend"
            android:layout_marginLeft="@dimen/dp17"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp17"
            android:layout_toEndOf="@+id/value_txt"
            android:text="果仁"
            android:textColor="@color/text_home_recommend"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/month_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp12"
                android:text="12-01"
                android:textColor="@color/c_CCCCCC"
                android:layout_marginLeft="@dimen/dp17"
                android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:layout_marginRight="@dimen/dp17"
            android:layout_toEndOf="@+id/date_txt"
            android:text="10:20:32"
            android:textColor="@color/c_CCCCCC"
            android:layout_marginLeft="@dimen/dp6"/>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_CCCCCC"/>

</LinearLayout>