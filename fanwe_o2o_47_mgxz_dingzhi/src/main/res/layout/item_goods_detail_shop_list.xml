<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="163dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name_or_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp13"
        android:textColor="@color/gray_text_59"
        android:lines="1"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp13"
        android:textColor="@color/gray_text_59"
        android:lines="1"
        />
    <TextView
        android:id="@+id/tv_distance"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp13"
        android:textColor="@color/gray_text_59"
        android:lines="1"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/ic_phone_enable"/>

        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp58"
            android:layout_marginRight="@dimen/dp58"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_map_enable"/>

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:src="@drawable/ic_shop_enable"/>
    </FrameLayout>


</LinearLayout>