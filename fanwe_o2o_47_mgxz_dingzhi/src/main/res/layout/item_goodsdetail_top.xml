<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_top"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl_viewpager"
        android:layout_width="match_parent"
        android:layout_height="235dp">
        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/viewpager"-->
            <!--android:background="@color/white"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->

        <com.miguo.ui.view.AutoBanner
            android:id="@+id/viewpager"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.miguo.ui.view.AutoBanner>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp17"
            android:layout_marginRight="@dimen/dp17"
            android:text=""
            android:ellipsize="end"
            android:textSize="@dimen/sp20"
            android:textColor="@color/black"
            android:gravity="center"
            android:maxLines="2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_top_youhui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:layout_marginRight="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:text=""
                />


            <TextView
                android:id="@+id/tv_top_quan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp14"
                android:text=""
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp10"
                />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp3"
                android:layout_gravity="center_vertical"
                android:text="专属优惠"
                android:textColor="@color/dark_text"
                android:textSize="10sp"
                android:background="@drawable/shape_cricle_stroke_dark_solid_white_radius_small"
                />-->
            <TextView
                android:id="@+id/tv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp3"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp20">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/gray_text_59"
                    android:text="人气值"/>
                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/gray_text_59"
                    android:text=""/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/md_ripple_unbound_gray"
                android:src="@drawable/ic_collect_no"
                android:scaleType="centerInside"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp17"/>
        </FrameLayout>
    </LinearLayout>



</LinearLayout>