<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/item_home_recommend_event_iv_image"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:background="@drawable/nopic"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_home_recommend_event_iv_image"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_fenxiao"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_event_title"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/home_event"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128.0"
                android:textColor="@color/home_event"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="￥"
                android:textColor="@color/text_hongbao_title"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_totalmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="210.0"
                android:textColor="@color/text_hongbao_title"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>