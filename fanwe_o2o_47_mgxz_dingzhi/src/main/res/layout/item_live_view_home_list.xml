<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg_item_live"
        android:layout_width="175dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_bg" />

    <RelativeLayout
        android:layout_width="175dp"
        android:layout_height="140dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/bg_item_live_list_home_fragment"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/dot_item_live_list_home_fragment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="直播"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shop_item_live_list_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_describe_item_live_list_home_fragment"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="星巴克(黄龙广场店)"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_describe_item_live_list_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="无双女王 高雅 御姐范"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </RelativeLayout>
</FrameLayout>
