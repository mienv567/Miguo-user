<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ll_shopping_cart"
android:layout_width="0dp"
android:layout_height="match_parent"
android:layout_weight="1"
android:background="@drawable/md_ripple_white"
android:clickable="true"
android:gravity="center"
android:orientation="vertical">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_red_shopcart"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/dp15"
        android:layout_height="@dimen/dp13"
        android:paddingLeft="@dimen/dp2"
        android:paddingRight="@dimen/dp2"
        android:gravity="center"
        android:text=""
        android:textSize="9sp"
        android:textColor="@android:color/white"
        android:background="@drawable/reddot_13dp"
        android:visibility="gone"
        android:layout_gravity="right"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_gravity="center"
        android:src="@drawable/ic_shopping"/>
</FrameLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:text="购物车"
    android:textColor="@color/gray_text_59"
    android:textSize="@dimen/sp13"/>
</LinearLayout>