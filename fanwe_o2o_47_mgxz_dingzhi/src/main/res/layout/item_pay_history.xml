<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_item_pay_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_F2F2F2"
        android:paddingBottom="@dimen/dp12"
        android:paddingLeft="@dimen/dp12"
        android:paddingTop="@dimen/dp12"
        android:textColor="@color/text_fenxiao"
        android:textSize="@dimen/dp15" />

    <RelativeLayout
        android:id="@+id/layout_item_pay_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp15"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        android:paddingTop="@dimen/dp15">

        <TextView
            android:id="@+id/tv_money_item_pay_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016"
            android:textColor="@color/text_fenxiao"
            android:textSize="@dimen/dp17" />

        <TextView
            android:id="@+id/tv_num_item_pay_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp7"
            android:layout_toRightOf="@+id/tv_money_item_pay_history"
            android:text="140"
            android:textColor="@color/text_fenxiao"
            android:textSize="@dimen/dp17" />

        <TextView
            android:id="@+id/tv_order_item_pay_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money_item_pay_history"
            android:layout_marginTop="@dimen/dp8"
            android:text="12315646546489"
            android:textColor="@color/text_fenxiao"
            android:textSize="@dimen/dp13" />

        <TextView
            android:id="@+id/tv_status_item_pay_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp1"
            android:text="成功"
            android:textSize="@dimen/dp16" />

        <TextView
            android:id="@+id/tv_time_item_pay_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_status_item_pay_history"
            android:layout_marginTop="@dimen/dp9"
            android:text="12:33:58"
            android:textColor="@color/c_CCCCCC"
            android:textSize="@dimen/dp13" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_lineE5" />
</LinearLayout>
