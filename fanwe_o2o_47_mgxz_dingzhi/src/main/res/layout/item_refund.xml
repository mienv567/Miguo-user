<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:background="@color/text_home_recommend"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp17"
            android:gravity="left|center_vertical"
            android:text="1月"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/data_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginTop="@dimen/dp20">

            <TextView
                android:id="@+id/value_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp17"
                android:text=""
                android:textColor="@color/text_home_recommend"
                android:textSize="@dimen/sp17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/value_txt"
                android:text="元"
                android:textColor="@color/text_home_recommend"
                android:textSize="@dimen/sp17" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp17"
                    android:text="12-01"
                    android:textColor="@color/c_CCCCCC"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp17"
                    android:layout_toEndOf="@+id/date_txt"
                    android:text="10:20:32"
                    android:textColor="@color/c_CCCCCC"
                    android:textSize="@dimen/sp12" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_line">

            <TextView
                android:id="@+id/order_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp17"
                android:text="订单号:"
                android:textColor="@color/gray_text_99"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toEndOf="@+id/order_str"
                android:text="123544455"
                android:textColor="@color/gray_text_99"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp4">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp17"
                android:ellipsize="end"
                android:text="描述"
                android:textColor="@color/gray_text_99"
                android:textSize="@dimen/sp12" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c_CCCCCC" />
    </LinearLayout>
</LinearLayout>