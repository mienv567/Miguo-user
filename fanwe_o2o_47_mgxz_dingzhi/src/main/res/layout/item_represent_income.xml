<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_item_represent_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_e6e6e6"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp5"
        android:paddingLeft="@dimen/dp15"
        android:paddingTop="@dimen/dp5"
        android:textColor="@color/gray_text_99"
        android:textSize="@dimen/dp12" />

    <RelativeLayout
        android:id="@+id/layout_item_represent_income"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:paddingLeft="@dimen/dp15">

        <TextView
            android:id="@+id/tv_money_item_represent_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="90dp"
            android:text="56464"
            android:textColor="@color/text_base_color"
            android:textSize="@dimen/dp16" />

        <TextView
            android:id="@+id/tv_type_item_represent_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_money_item_represent_income"
            android:maxLines="1"
            android:paddingTop="@dimen/dp5"
            android:textColor="@color/text_base_color"
            android:textSize="@dimen/dp13" />

        <TextView
            android:id="@+id/tv_time_item_represent_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_type_item_represent_income"
            android:layout_below="@+id/tv_type_item_represent_income"
            android:paddingTop="@dimen/dp5"
            android:textColor="@color/text_base_color"
            android:textSize="@dimen/dp13" />

        <TextView
            android:id="@+id/tv_order_item_represent_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_time_item_represent_income"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@+id/tv_time_item_represent_income"
            android:maxLines="1"
            android:textColor="@color/text_base_color"
            android:textSize="@dimen/dp13" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_lineE5" />
</LinearLayout>
