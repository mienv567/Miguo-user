<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg_item_user_home"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="125dp">

        <TextView
            android:id="@+id/tv_status_item_live_list_user_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_orange"
            android:gravity="center"
            android:padding="5dp"
            android:text="正在直播"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_shop_item_live_list_user_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_tags_item_live_list_user_home"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_location_live_item"
            android:drawablePadding="3dp"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <LinearLayout
            android:id="@+id/layout_tags_item_live_list_user_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" />

    </RelativeLayout>
</FrameLayout>
