<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_636_px2dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="@dimen/size_636_px2dp"
        android:layout_height="@dimen/size_359_px2dp"
        
        >
        <ImageView 
            android:id="@+id/iv_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_pay_text_1"
            android:scaleType="center"
            />
        <ImageButton 
            android:id="@+id/ib_x"
            android:layout_width="@dimen/size_48_px2dp"
            android:layout_height="@dimen/size_48_px2dp"
            android:src="@drawable/ic_x"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44_px2dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bg_pay_text_2"
            android:scaleType="center"
            />
        <TextView 
            android:id="@+id/tv_money"
            android:layout_width="@dimen/size_108_px2dp"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/c_FF443E"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bg_pay_text_3"
            android:scaleType="center"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_message_share"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:layout_marginTop="@dimen/size_10_px2dp"
        />
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_23_px2dp"
        >
        <ImageView 
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_pay_button"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="分 享"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="21sp"/>
    </FrameLayout>

</LinearLayout>
