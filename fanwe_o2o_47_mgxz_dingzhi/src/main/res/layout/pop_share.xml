<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_80"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_up_pop_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp35"
        android:gravity="center"
        android:text="分享给朋友，朋友可以领取观看奖励"
        android:textColor="@color/white"
        android:textSize="@dimen/dp12" />

    <TextView
        android:id="@+id/tv_title_pop_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp35"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_weixin_pop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp7"
                android:text="微信"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_friends_pop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_friends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp7"
                android:text="朋友圈"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_qq_pop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp7"
                android:text="QQ"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_qqzone_pop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_qqzone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp7"
                android:text="QQ空间"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sina_pop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_sina" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp7"
                android:text="新浪微博"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp17"
        android:layout_marginRight="@dimen/dp17"
        android:layout_marginTop="@dimen/dp38"
        android:background="@color/white_60" />

    <Button
        android:id="@+id/btn_cancel_pop_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/dp17" />

</LinearLayout>
