<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/title_line"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/md_ripple_unbound_gray"
        android:scaleType="centerInside"
        android:src="@drawable/ic_left_arrow_dark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/youhuishop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="优惠商家"
            android:textColor="@color/c_595959"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/commonshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:text="全部商家"
            android:textColor="@color/c_CCCCCC"
            android:textSize="@dimen/text_size"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/search_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/md_ripple_white"
        android:scaleType="centerInside"
        android:src="@drawable/small_search"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"/>
</RelativeLayout>