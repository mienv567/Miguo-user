<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp42"
                android:background="#00000000"
                android:paddingBottom="@dimen/dp5"
                android:paddingTop="@dimen/dp10">

    <TextView
        android:id="@+id/tv_talk2host"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp27"
        android:background="@drawable/shape_bg_dark_30"
        android:text="跟主播聊聊?"
        android:gravity="center"
        android:textColor="@color/gray_cc"
        android:textSize="@dimen/sp12"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp27"
            android:background="@drawable/shape_bg_white_80"
            android:gravity="center"
            android:text="宝贝"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/rob"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp27"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/shape_bg_white_80"
            android:gravity="center"
            android:text="抢到"
            android:textColor="@color/dark_80"
            android:textSize="@dimen/sp13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="@dimen/dp27"
            android:layout_height="@dimen/dp27"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/ic_gift"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp27"
            android:layout_height="@dimen/dp27"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/ic_share"/>

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="@dimen/dp27"
            android:layout_height="@dimen/dp27"
            android:src="@drawable/ic_like"/>
    </LinearLayout>

</RelativeLayout>