<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="DanmuCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/checkbox_danmu_selector</item>

        <!--<item name="android:paddingLeft">25.0dip</item>-->
        <item name="android:width">60dp</item>
        <item name="android:height">30dp</item>

        <!--<item name="android:maxHeight">10.0dip</item>-->

    </style>
    <style name="FanweTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out_to_right</item>
    </style>

    <style name="anim_pop_dynamic_comment_action" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_show_pop_dynamic_comment_action</item>
        <item name="android:windowExitAnimation">@anim/anim_hide_pop_dynamic_comment_action</item>
    </style>

    <!-- 我的红包小窗口详细信息 -->
    <style name="Translucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/bg_tuan_detail_bc</item>
    </style>

    <style name="Popup_Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_sliding_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_sliding_to_bottom</item>
    </style>

    <style name="button_miguo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_cricle_yellow</item>

    </style>


    <style name="RushBuyCountDownTimerViewStyle" parent="SnapUpView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RushBuyCountDownTimerViewStyleRed" parent="RushBuyCountDownTimerViewStyle">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>


    <style name="SnapUpViewColon" parent="SnapUpView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">:</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnapUpView">
        <!--//改变控件大小-->
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TransTheme" parent="android:Theme.Holo.Light.NoActionBar"></style>
    <style name="VoiceCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_voice</item>
    </style>
    <style name="DanMuCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_danmu</item>
    </style>
    <!--美白的闪光灯-->
    <style name="LightingCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_lighting</item>
    </style>

    <!--红包列表的checkbox-->
    <style name="RedPacketCheckModeCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox_check</item>
    </style>

    <style name="Translucent_NoTitle_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="transparent_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_width">match_parent</item>
    </style>

    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/layer_live_rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:numColumns">5</item>
    </style>

    <style name="MySeekBar" parent="android:Widget.Material.SeekBar">
        <item name="android:color">@color/orange</item>
    </style>

    <!--popup scale 动画-->
    <style name="pop_scale">
        <item name="android:windowEnterAnimation">@anim/anim_pop_enter_scale</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_exit_scale</item>
    </style>

    <!--popup translate 动画-->
    <style name="pop_translate">
        <item name="android:windowEnterAnimation">@anim/anim_pop_enter_translate</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_exit_translate</item>
    </style>

    <!--圆形CHECKBOX-->
    <style name="Circle_checkbox">
        <item name="android:button">@drawable/circle_checkbox</item>
    </style>

    <style name="Transparent_title_area" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/dark_text</item>
        <item name="colorAccent">@color/bg_activity_gray</item>
    </style>

</resources>