<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="item_top_bar_my">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="item_name_top_bar_my">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:textColor">@color/text_top_bar_name</item>
    </style>
    <style name="item_value_top_bar_my">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/event_text_price</item>
        <item name="android:textColor">@color/text_hongbao_title</item>
    </style>
    <style name="item_my_order_my">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="item_my_asset_my">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="item_value_my_asset_my">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:textColor">@color/text_fenxiao</item>
    </style>
    <style name="item_name_my_asset_my">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fenxiao_text_city</item>
        <item name="android:textColor">@color/text_hongbao_title</item>
    </style>
</resources>