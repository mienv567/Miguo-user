<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text_base">
        <item name="android:text">@string/loading</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="edit_base">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="text_title" parent="text_base">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="text_content" parent="text_base">
        <item name="android:textSize">@dimen/text_size_content</item>
    </style>

    <style name="text_item_title" parent="text_base">
        <item name="android:textColor">@color/text_item_title</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_item_content" parent="text_base">
        <item name="android:textColor">@color/text_item_content</item>
        <item name="android:textSize">@dimen/text_size_item_content</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="text_order">
           <item name="android:layout_marginLeft">10dp</item>
           <item name="android:textColor">@color/main_color</item>
           <item name="android:gravity">center</item>
            <item name="android:visibility">gone</item>
           <item name="android:textSize">@dimen/text_size_title</item>
           <item name="android:background">@drawable/bg_order_select</item>
        </style>

</resources>